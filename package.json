{
  "name": "esbuild-plugin-dynamic-import",
  "version": "0.1.0",
  "type": "module",
  "description": "Dynamic import variables support for esbuild",
  "repository": "git+https://github.com/esbuildr/esbuild-plugin-dynamic-import.git",
  "author": "JounQin (https://www.1stG.me) <admin@1stg.me>",
  "funding": "https://opencollective.com/unts",
  "license": "MIT",
  "packageManager": "pnpm@8.3.1",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "./lib/index.js",
  "exports": "./lib/index.js",
  "files": [
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsc -p src",
    "lint": "run-p lint:*",
    "lint:es": "eslint . --cache -f friendly --max-warnings 10",
    "lint:tsc": "tsc --noEmit",
    "postversion": "pnpm i --no-frozen-lockfile",
    "prepare": "simple-git-hooks",
    "prerelease": "pnpm build",
    "release": "changeset publish",
    "typecov": "type-coverage",
    "version": "changeset version"
  },
  "peerDependencies": {
    "esbuild": "^0.17.18"
  },
  "dependencies": {
    "fast-glob": "^3.2.12"
  },
  "devDependencies": {
    "@1stg/common-config": "^8.0.1",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/node": "^18.16.3",
    "esbuild": "^0.17.18",
    "size-limit": "^8.2.6",
    "size-limit-preset-node-lib": "^0.2.0",
    "type-coverage": "^2.25.0",
    "typescript": "^5.0.4"
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "1.1kB"
    }
  ],
  "typeCoverage": {
    "atLeast": 100,
    "cache": true,
    "detail": true,
    "ignoreAsAssertion": true,
    "ignoreNonNullAssertion": true,
    "showRelativePath": true,
    "strict": true,
    "update": true
  }
}
